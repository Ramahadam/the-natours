doctype html 
html
    head 
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700',rel='stylesheet')
        link(rel='stylesheet', href='css/style.css')
        link(rel='shortcut icon', href='img/favicon.png', type='image/png')
        title Natours | Exciting tours for adventurous people
    body
        // HEADER
        header.header
            nav.nav.nav--tours
                a(href='#').nav__el All tours
                form.nav__search
                    button.nav__search-btn
                        svg
                            use(xlink:href='img/icons.svg#icon-search')
                    input(type='text',placeholder='Search tours').nav__search-input
            div.header__logo
                img(src='img/logo-white.png', alt='Natours logo')
            nav.nav.nav--user
                //- a(href='#').nav__el My bookings
                //- a(href='#').nav__el
                //-     img(src='img/users/user-1.jpg',alt='User photo', type='image/jpg').nav__user-img
                //-     span Jonas
                button.nav__el Login
                button.nav__el.nav__el--cta Sign up

        // CONTENT
        main.main
            div.card-container

        // FOOTER
        
        footer.footer 
            .footer__logo 
                img(src='img/logo-green.png', alt='Natours logo')

            ul.footer__nav
                li: a(href='#') About us 
                li: a(href='#') Download apps 
                li: a(href='#') Become a guide
                li: a(href='#') Careers
                li: a(href='#') Contact 

